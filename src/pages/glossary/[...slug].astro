---
import { getCollection } from 'astro:content';
import { ViewTransitions } from 'astro:transitions';

export async function getStaticPaths() {
  const glossary = await getCollection('topic');
  const allTopics = await getCollection('topic');

  return glossary.map((term) => {
    // 関連用語を取得（同じカテゴリの他の用語）
    const relatedTerms = allTopics
      .filter(t => t.slug !== term.slug && t.data.category === term.data.category)
      .slice(0, 3);

    return {
      params: { slug: term.slug },
      props: { term, relatedTerms },
    };
  });
}

const { term, relatedTerms } = Astro.props;
const { Content } = await term.render();

// カテゴリごとの色設定
const categoryColors: Record<string, string> = {
  tool: '#007aff',
  method: '#34c759',
  concept: '#5856d6',
  principle: '#ff9500',
  default: '#8e8e93',
};
const badgeColor = categoryColors[term.data.category] || categoryColors.default;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{term.data.title} | ごりゅご.com 用語集</title>
    <meta name="description" content={term.data.description} />
    <meta property="og:title" content={`${term.data.title} | ごりゅご.com 用語集`} />
    <meta property="og:description" content={term.data.description} />
    <meta property="og:type" content="article" />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;500;700&family=Noto+Sans+JP:wght@300;400;700&display=swap" rel="stylesheet">
    <ViewTransitions />
    <style>
      :root {
        --bg: #f8f9fc;
        --accent: #007aff;
        --accent-soft: rgba(0, 122, 255, 0.08);
        --text-main: #1d1d1f;
        --text-sub: #636366;
        --glass: rgba(255, 255, 255, 0.7);
        --border: rgba(0, 0, 0, 0.05);
        --shadow: 0 8px 32px rgba(0, 0, 0, 0.04);
        --radius: 24px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Outfit', 'Noto Sans JP', sans-serif;
        background-color: var(--bg);
        color: var(--text-main);
        line-height: 1.7;
        margin: 0;
        padding: 40px 20px;
        -webkit-font-smoothing: antialiased;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
      }

      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--accent);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 24px;
        transition: opacity 0.2s;
      }

      .back-link:hover {
        opacity: 0.7;
      }

      /* Header Section */
      header {
        margin-bottom: 60px;
      }

      .category-badge {
        display: inline-block;
        padding: 4px 12px;
        background: var(--accent-soft);
        color: var(--accent);
        border-radius: 100px;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 16px;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 16px 0;
        letter-spacing: -0.02em;
      }

      .description {
        font-size: 1.15rem;
        color: var(--text-sub);
        max-width: 600px;
      }

      /* Content Hub Area */
      .content-hub {
        display: flex;
        flex-direction: column;
        gap: 40px;
      }

      .content-hub > p {
        font-size: 1.05rem;
        line-height: 1.8;
      }

      h2.section-header {
        font-size: 1.4rem;
        margin-top: 40px;
        padding-bottom: 8px;
        border-bottom: 2px solid var(--accent-soft);
        display: flex;
        align-items: center;
        gap: 8px;
      }

      h2.section-header::before {
        content: "";
        width: 4px;
        height: 24px;
        background: var(--accent);
        border-radius: 4px;
      }

      /* Embedded Atomic Note */
      .embedded-note {
        background: white;
        border-radius: var(--radius);
        padding: 32px;
        box-shadow: var(--shadow);
        border: 1px solid var(--border);
        position: relative;
        transition: transform 0.3s ease;
      }

      .embedded-note:hover {
        transform: translateY(-2px);
      }

      .embedded-note .note-label {
        position: absolute;
        top: -12px;
        right: 24px;
        background: var(--text-main);
        color: white;
        padding: 2px 10px;
        font-size: 0.7rem;
        border-radius: 4px;
        font-weight: 500;
      }

      .embedded-note .note-title {
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 16px;
        color: var(--accent);
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .embedded-note p {
        margin: 0;
        font-size: 1.05rem;
      }

      .embedded-note .note-footer {
        margin-top: 20px;
        padding-top: 16px;
        border-top: 1px dashed var(--border);
        font-size: 0.85rem;
      }

      .source-link {
        color: var(--text-sub);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 4px;
        transition: color 0.2s;
      }

      .source-link:hover {
        color: var(--accent);
      }

      /* Markdown content styling */
      .glossary-content {
        font-size: 1.05rem;
        line-height: 1.8;
      }

      .glossary-content h1,
      .glossary-content h2,
      .glossary-content h3 {
        font-size: 1.4rem;
        font-weight: 700;
        margin-top: 40px;
        margin-bottom: 16px;
        padding-bottom: 8px;
        border-bottom: 2px solid var(--accent-soft);
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .glossary-content h1::before,
      .glossary-content h2::before,
      .glossary-content h3::before {
        content: "";
        width: 4px;
        height: 24px;
        background: var(--accent);
        border-radius: 4px;
      }

      .glossary-content p {
        margin-bottom: 16px;
      }

      .glossary-content ul,
      .glossary-content ol {
        margin-left: 24px;
        margin-bottom: 16px;
      }

      .glossary-content li {
        margin-bottom: 8px;
      }

      /* Related Grid */
      .related-section {
        margin-top: 60px;
      }

      .related-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
      }

      .card {
        background: var(--glass);
        backdrop-filter: blur(12px);
        border: 1px solid white;
        border-radius: var(--radius);
        padding: 24px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.02);
        text-decoration: none;
        color: inherit;
        transition: all 0.3s ease;
      }

      .card:hover {
        background: white;
        box-shadow: var(--shadow);
        transform: translateY(-4px);
      }

      .card-title {
        font-weight: 700;
        font-size: 1rem;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .card-title::after {
        content: "→";
        opacity: 0.3;
        transition: opacity 0.3s;
      }

      .card:hover .card-title::after {
        opacity: 1;
      }

      .card-desc {
        font-size: 0.85rem;
        color: var(--text-sub);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      /* Subtle Animation */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .container > * {
        animation: fadeIn 0.8s ease forwards;
      }

      @media (max-width: 768px) {
        body {
          padding: 20px 16px;
        }

        h1 {
          font-size: 1.8rem;
        }

        .description {
          font-size: 1rem;
        }

        .embedded-note {
          padding: 20px;
          border-radius: 16px;
        }

        .related-grid {
          grid-template-columns: 1fr;
        }

        .card {
          padding: 20px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/" class="back-link">← 用語集に戻る</a>

      <header>
        <span class="category-badge" style={`background: ${badgeColor}15; color: ${badgeColor};`}>
          {term.data.category}
        </span>
        <h1>{term.data.title}</h1>
        <p class="description">{term.data.description}</p>
      </header>

      <div class="content-hub">
        <div class="glossary-content">
          <Content />
        </div>

        {relatedTerms.length > 0 && (
          <div class="related-section">
            <h2 class="section-header">関連する用語</h2>
            <div class="related-grid">
              {relatedTerms.map((related) => (
                <a href={`/glossary/${related.slug}/`} class="card">
                  <div class="card-title">{related.data.title}</div>
                  <div class="card-desc">{related.data.description}</div>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </body>
</html>
