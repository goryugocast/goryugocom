        // Show/hide lists
        Object.keys(modeLists).forEach(mode => {
          modeLists[mode].classList.toggle('hidden', mode !== currentMode);
          filterLists[mode].classList.toggle('hidden', mode !== currentMode);
          filterLists[mode].classList.toggle('visible', mode === currentMode);
        });

        // Update main buttons
        document.querySelectorAll('.main-filter-button').forEach(btn => {
          btn.classList.toggle('active', btn.dataset.mainFilter === currentMode);
        });

        // Filter and Sort
        filterContent();
      }

      function filterContent() {
        const currentList = modeLists[currentMode];
        const cards = Array.from(currentList.querySelectorAll('.article-card, .glossary-card'));
        let visibleCount = 0;

        cards.forEach(card => {
          let isVisible = false;

          if (currentMode === 'videos') {
            const series = card.dataset.series;
            const title = card.dataset.title;
            const seriesMatch = currentVideoSeries === 'all' || series === currentVideoSeries;
            const searchMatch = currentSearchQuery === '' || title.includes(currentSearchQuery.toLowerCase());
            isVisible = seriesMatch && searchMatch;
          } else if (currentMode === 'articles') {
            const parent = card.dataset.seriesParent;
            const child = card.dataset.seriesChild;
            const title = card.dataset.title;
            const seriesMatch = currentArticleSeriesParent === 'all' ||
              (parent === currentArticleSeriesParent && (currentArticleSeriesChild === '' || child === currentArticleSeriesChild));
            const searchMatch = currentSearchQuery === '' || title.includes(currentSearchQuery.toLowerCase());
            isVisible = seriesMatch && searchMatch;
          } else if (currentMode === 'glossary') {
            const category = card.dataset.category;
            const title = card.querySelector('.glossary-title')?.textContent.toLowerCase() || '';
            const categoryMatch = currentGlossaryCategory === 'all' || category === currentGlossaryCategory;
            const searchMatch = currentSearchQuery === '' || title.includes(currentSearchQuery.toLowerCase());
            isVisible = categoryMatch && searchMatch;
          } else if (currentMode === 'notes') {
            const topicsStr = card.dataset.topics || '[]';
            const title = card.dataset.title || '';
            let topics = [];
            try {
              topics = JSON.parse(topicsStr);
            } catch (e) {
              console.error('Error parsing topics:', topicsStr);
            }
            const topicMatch = currentNoteTopic === 'all' || topics.includes(currentNoteTopic);
            const searchMatch = currentSearchQuery === '' || title.includes(currentSearchQuery.toLowerCase());
            isVisible = topicMatch && searchMatch;
          }

          card.classList.toggle('hidden', !isVisible);
          if (isVisible) visibleCount++;
        });

        emptyState.classList.toggle('hidden', visibleCount > 0);
        resultCount.textContent = `${visibleCount} ‰ª∂`;

        // Update Title
        updateTitle();

        // Sort if applicable
        if (currentMode !== 'glossary') {
          sortContent();
