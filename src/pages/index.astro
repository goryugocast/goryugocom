        const anyExpanded = Array.from(modeLists[currentMode].querySelectorAll('.article-card.expanded')).length > 0;
        bulkToggleBtn.textContent = anyExpanded ? '„Åô„Åπ„Å¶Èñâ„Åò„Çã' : '„Åô„Åπ„Å¶Èñã„Åè';
      }

      function updateTitle() {
        let title = '';
        if (currentMode === 'videos') {
          title = currentVideoSeries === 'all' ? '„Åô„Åπ„Å¶„ÅÆÂãïÁîª' : currentVideoSeries;
        } else if (currentMode === 'articles') {
          title = currentArticleSeriesParent === 'all' ? '„Åô„Åπ„Å¶„ÅÆË®ò‰∫ã' : (currentArticleSeriesChild ? `${currentArticleSeriesParent} / ${currentArticleSeriesChild}` : currentArticleSeriesParent);
        } else if (currentMode === 'glossary') {
          title = currentGlossaryCategory === 'all' ? 'Áî®Ë™ûÈõÜ' : currentGlossaryCategory;
        } else if (currentMode === 'notes') {
          title = currentNoteTopic === 'all' ? '„Ç¢„Éà„Éü„ÉÉ„ÇØ„Éé„Éº„Éà' : currentNoteTopic;
