      // Main Mode Switch
      document.querySelectorAll('.main-filter-button').forEach(btn => {
        btn.addEventListener('click', () => {
          currentMode = btn.dataset.mainFilter;
          updateUI();
        });
      });

      // Video Filters
      document.querySelectorAll('[data-filter-type="video-series"]').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('[data-filter-type="video-series"]').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          currentVideoSeries = btn.dataset.filterValue;
          filterContent();
        });
      });

      // Article Filters
      document.querySelectorAll('[data-filter-type="series"]').forEach(button => {
        button.addEventListener('click', () => {
          const parent = button.dataset.filterParent;
          const child = button.dataset.filterChild;
          const hasChildren = button.dataset.hasChildren === 'true';

          if (hasChildren && child === '') {
            const childContainer = document.querySelector(`[data-parent="${parent}"]`);
            if (childContainer) {
              childContainer.classList.toggle('visible');
              button.classList.toggle('expanded');
            }
          }

          document.querySelectorAll('[data-filter-type="series"]').forEach(b => b.classList.remove('active'));
          button.classList.add('active');
          currentArticleSeriesParent = parent;
          currentArticleSeriesChild = child;
          filterContent();
        });
      });

      // Glossary Filters
      document.querySelectorAll('[data-filter-type="glossary-category"]').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('[data-filter-type="glossary-category"]').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          currentGlossaryCategory = btn.dataset.filterValue;
          filterContent();
        });
      });

      // Search & Sort
      searchInput.addEventListener('input', (e) => {
        currentSearchQuery = e.target.value;
        filterContent();
      });

      sortSegmentedControl.querySelectorAll('.segmented-control-option').forEach(option => {
        option.addEventListener('click', () => {
          const value = (option as HTMLElement).dataset.sort;
          currentSort = value;
          
          // Update UI
          sortSegmentedControl.dataset.value = value;
          sortSegmentedControl.querySelectorAll('.segmented-control-option').forEach(opt => {
            opt.classList.toggle('active', opt === option);
          });
          
          sortContent();
        });
      });

      // Bulk Toggle
      bulkToggleBtn.addEventListener('click', () => {
        const currentList = modeLists[currentMode];
        const visibleCards = Array.from(currentList.querySelectorAll('.article-card:not(.hidden)'));
        const anyExpanded = visibleCards.some(card => card.classList.contains('expanded'));
        
        visibleCards.forEach(card => {
          card.classList.toggle('expanded', !anyExpanded);
        });
        
        bulkToggleBtn.textContent = !anyExpanded ? '„Åô„Åπ„Å¶Èñâ„Åò„Çã' : '„Åô„Åπ„Å¶Èñã„Åè';
      });

      // Card Interaction
      document.addEventListener('click', (e) => {
        const card = (e.target as HTMLElement).closest('.article-card');
        const readMoreBtn = (e.target as HTMLElement).closest('.read-more-btn');
        const seminarItem = (e.target as HTMLElement).closest('.seminar-section-item');

        if (card && !readMoreBtn && !seminarItem) {
          card.classList.toggle('expanded');
        }
      });

      // Glossary Related Toggle
      document.addEventListener('click', (e) => {
        const toggle = (e.target as HTMLElement).closest('.glossary-related-toggle');
        if (toggle) {
          const termId = (toggle as HTMLElement).dataset.termId;
          const container = document.querySelector(`.glossary-related-articles[data-term-id="${termId}"]`);
          toggle.classList.toggle('expanded');
          container.classList.toggle('hidden');
        }
      });
    </script>
  </body>
