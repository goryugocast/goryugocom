---
interface Props {
  title: string;
  slug: string;
  yomikata?: string;
  aliases?: string[];
  category: string;
  description: string;
}

const { title, slug, yomikata, aliases, description } = Astro.props;
---

<a href={`/glossary/${slug}/`} class="glossary-card" transition:name={`glossary-card-${slug}`}>
  <div class="glossary-header">
    <div class="header-main">
      <h3 class="term-title">{title}</h3>
      {yomikata && <span class="yomikata">({yomikata})</span>}
    </div>
    {aliases && aliases.length > 0 && (
      <div class="aliases">
        <span class="alias-label">aka:</span> {aliases.join(', ')}
      </div>
    )}
  </div>

  <div class="glossary-body">
    <p class="description">{description}</p>
  </div>

  <div class="card-arrow">â†’</div>
</a>

<style>
  .glossary-card {
    display: block;
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius: 20px;
    padding: 1.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.05);
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .glossary-card:hover {
    background: rgba(255, 255, 255, 0.6);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
  }

  .glossary-header {
    margin-bottom: 0.75rem;
  }

  .header-main {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .term-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1c1c1e;
    margin: 0;
    letter-spacing: -0.01em;
    transition: color 0.2s ease;
  }

  .glossary-card:hover .term-title {
    color: #007aff;
  }

  .yomikata {
    font-size: 0.9rem;
    color: #8e8e93;
    font-weight: 400;
  }

  .aliases {
    margin-top: 0.5rem;
    font-size: 0.8rem;
    color: #8e8e93;
  }

  .alias-label {
    font-weight: 600;
    color: #3a3a3c;
  }

  .glossary-body {
    margin-bottom: 0;
  }

  .description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #3a3a3c;
    margin: 0;
  }

  .card-arrow {
    position: absolute;
    right: 1.5rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1.2rem;
    color: #8e8e93;
    opacity: 0.3;
    transition: all 0.3s ease;
  }

  .glossary-card:hover .card-arrow {
    opacity: 1;
    color: #007aff;
    transform: translateY(-50%) translateX(4px);
  }

  @media (max-width: 768px) {
    .glossary-card {
      padding: 1rem;
      padding-right: 2.5rem;
      border-radius: 16px;
    }

    .term-title {
      font-size: 1.1rem;
    }

    .description {
      font-size: 0.9rem;
    }

    .card-arrow {
      right: 1rem;
    }
  }
</style>
