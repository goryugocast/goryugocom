---
import { getCollection } from 'astro:content';

interface Props {
  slug: string;
  title?: string;
}

const { slug, title } = Astro.props;

// ノートを取得
const allNotes = await getCollection('atomic-notes');
const note = allNotes.find(n => n.slug === slug || n.data.title === slug);

let Content = null;
let noteData = null;

if (note) {
  const rendered = await note.render();
  Content = rendered.Content;
  noteData = note.data;
}
---

{note ? (
  <div class="atomic-note-card">
    <div class="note-header">
      <span class="note-badge">Note</span>
      <h4 class="note-title">{noteData?.title || title || slug}</h4>
    </div>
    <div class="note-content">
      <Content />
    </div>
  </div>
) : (
  <div class="atomic-note-card missing">
    <span class="note-badge">Note</span>
    <span class="note-missing-text">{title || slug} (未作成)</span>
  </div>
)}

<style>
  .atomic-note-card {
    background: rgba(255, 255, 255, 0.5);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-left: 4px solid #5856d6;
    border-radius: 12px;
    padding: 1rem 1.25rem;
    margin: 1rem 0;
    transition: all 0.2s ease;
  }

  .atomic-note-card:hover {
    background: rgba(255, 255, 255, 0.7);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
  }

  .atomic-note-card.missing {
    border-left-color: #8e8e93;
    opacity: 0.6;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .note-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .note-badge {
    background: linear-gradient(135deg, #5856d6 0%, #007aff 100%);
    color: white;
    padding: 3px 8px;
    border-radius: 6px;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .atomic-note-card.missing .note-badge {
    background: #8e8e93;
  }

  .note-title {
    font-size: 1rem;
    font-weight: 700;
    color: #1c1c1e;
    margin: 0;
  }

  .note-missing-text {
    font-size: 0.9rem;
    color: #8e8e93;
    font-style: italic;
  }

  .note-content {
    font-size: 0.9rem;
    line-height: 1.7;
    color: #3a3a3c;
  }

  .note-content :global(h1),
  .note-content :global(h2),
  .note-content :global(h3) {
    font-size: 0.95rem;
    font-weight: 700;
    color: #1c1c1e;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }

  .note-content :global(h1:first-child),
  .note-content :global(h2:first-child) {
    display: none; /* タイトルは既にheaderで表示しているので非表示 */
  }

  .note-content :global(p) {
    margin-bottom: 0.75rem;
  }

  .note-content :global(ul),
  .note-content :global(ol) {
    margin-left: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .note-content :global(li) {
    margin-bottom: 0.25rem;
  }

  .note-content :global(a) {
    color: #007aff;
    text-decoration: none;
  }

  .note-content :global(a:hover) {
    text-decoration: underline;
  }

  .note-content :global(code) {
    background: rgba(0, 0, 0, 0.05);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.85em;
  }

  .note-content :global(blockquote) {
    border-left: 3px solid #5856d6;
    padding-left: 1rem;
    margin: 0.75rem 0;
    color: #666;
    font-style: italic;
  }
</style>
