        <!-- Glossary filter list (separate island) -->
        <div class="filter-list-section" id="glossary-filter-list">
          <div class="filter-buttons">
            <button class="filter-button active" data-filter-type="glossary-category" data-filter-value="all">
              „Åô„Åπ„Å¶
              <span class="filter-count">{glossary.length}</span>
            </button>
            {glossaryCategories.map(category => {
              const termsInCategory = glossaryByCategory[category];
              return (
                <button
                  class="filter-button"
                  data-filter-type="glossary-category"
                  data-filter-value={category}
                >
                  {category}
                  <span class="filter-count">{termsInCategory.length}</span>
                </button>
              );
            })}
          </div>
        </div>

        <!-- Sort -->
        <div class="sort-section">
          <select class="sort-select" id="sort-select">
            <option value="newest">Êñ∞„Åó„ÅÑÈ†Ü</option>
            <option value="oldest">Âè§„ÅÑÈ†Ü</option>
          </select>
        </div>
      </header>

      <!-- Result header (for articles) -->
      <div class="result-header" id="article-result-header">
        <h2 id="current-filter-title">„Çª„Éü„Éä„Éº</h2>
        <div class="result-count" id="result-count">{seriesHierarchy['„Çª„Éü„Éä„Éº']?.count || 0} ‰ª∂„ÅÆË®ò‰∫ã</div>
      </div>

      <!-- Article list -->
      <div class="article-list" id="article-list">
        {sortedArticles.map((article) => {
          const { parent, child } = getFolderPath(article.id);
          const folderPath = child ? `${parent}/${child}` : parent;
          const isInitiallyVisible = parent === '„Çª„Éü„Éä„Éº';

          return (
            <article
              class={`article-card ${!isInitiallyVisible ? 'hidden' : ''}`}
              data-series-parent={parent}
              data-series-child={child || ''}
              data-topic={article.data.topic || ''}
              data-title={article.data.title.toLowerCase()}
              data-date={new Date(article.data.date_published).getTime()}
            >
              <a href={article.data.url} target="_blank" rel="noopener noreferrer" class="article-link">
                <div class="article-meta">
                  <span class="series-badge">{folderPath}</span>
                  <span class="article-date">
                    {new Date(article.data.date_published).toLocaleDateString('ja-JP', {
                      year: 'numeric',
                      month: '2-digit',
                      day: '2-digit'
                    })}
                  </span>
                </div>
                <div class="article-title">{article.data.title}</div>
              </a>

              {/* „Çª„Éü„Éä„ÉºÊßãÊàê */}
              {article.sections && article.sections.length > 0 && (
                <div class="seminar-sections">
                  {article.sections.map((section, index) => (
                    <a
                      href={section.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="seminar-section-item"
                    >
                      <div class="section-header">
                        <span class="section-number">{index + 1}</span>
                        <span class="section-time">{section.time}</span>
                      </div>
                      <div class="section-title">{section.title}</div>
                      {section.description && (
                        <div class="section-description">{section.description}</div>
                      )}
                    </a>
                  ))}
                </div>
              )}
            </article>
          );
        })}
      </div>

      <div class="empty-state hidden" id="empty-state">
        <p>Ë©≤ÂΩì„Åô„ÇãË®ò‰∫ã„ÅåË¶ã„Å§„Åã„Çä„Åæ„Åõ„Çì„Åß„Åó„Åü</p>
      </div>

      <!-- Glossary list (hidden by default) -->
      <div class="glossary-list hidden" id="glossary-list">
        {glossary.map((term) => {
          const relatedArticles = sortedArticles.filter(a => a.data.topic === term.data.topic_id);
          const recommendedArticles = term.data.recommended_articles || [];

          return (
            <div class="glossary-card" data-category={term.data.category}>
              <div class="glossary-header">
                <h3 class="glossary-title">{term.data.title}</h3>
                <span class="glossary-category-badge">{term.data.category}</span>
              </div>

              <p class="glossary-description">{term.data.description}</p>

              {recommendedArticles.length > 0 && (
                <div class="glossary-recommended">
                  <h4 class="glossary-section-title">üìå „Åä„Åô„Åô„ÇÅË®ò‰∫ã</h4>
                  <ul class="glossary-recommended-list">
                    {recommendedArticles.map(articleId => {
                      const article = sortedArticles.find(a => a.id.includes(articleId));
                      return article ? (
                        <li>
                          <a href={article.data.url} target="_blank" rel="noopener noreferrer">
                            {article.data.title}
                          </a>
                        </li>
                      ) : null;
                    })}
                  </ul>
                </div>
              )}

              <div class="glossary-related">
                <button class="glossary-related-toggle" data-term-id={term.data.topic_id}>
                  <span class="glossary-section-title">üìö Èñ¢ÈÄ£Ë®ò‰∫ã</span>
                  <span class="glossary-related-count">{relatedArticles.length}‰ª∂</span>
                  <span class="glossary-toggle-arrow">‚ñº</span>
                </button>
                <div class="glossary-related-articles hidden" data-term-id={term.data.topic_id}>
                  {relatedArticles.map(article => (
                    <div class="glossary-related-item">
                      <a href={article.data.url} target="_blank" rel="noopener noreferrer">
                        <span class="glossary-related-title">{article.data.title}</span>
                        <span class="glossary-related-date">
                          {new Date(article.data.date_published).toLocaleDateString('ja-JP', {
                            year: 'numeric',
                            month: '2-digit',
                            day: '2-digit'
                          })}
                        </span>
                      </a>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>

    <script>
      let currentSeriesParent = '„Çª„Éü„Éä„Éº';
      let currentSeriesChild = '';
      let currentTopic = 'all';
      let currentSearchQuery = '';
      let currentSort = 'newest';

      const articleList = document.getElementById('article-list');
      const emptyState = document.getElementById('empty-state');
      const resultCount = document.getElementById('result-count');
      const filterTitle = document.getElementById('current-filter-title');
      const searchInput = document.getElementById('search-input');
      const sortSelect = document.getElementById('sort-select');

      // Initialize with seminar filter
      window.addEventListener('DOMContentLoaded', () => {
        filterArticles();
      });

      // Filter articles
      function filterArticles() {
        const cards = Array.from(document.querySelectorAll('.article-card'));
        let visibleCount = 0;

        cards.forEach(card => {
          const seriesParent = card.dataset.seriesParent;
          const seriesChild = card.dataset.seriesChild;
          const topic = card.dataset.topic;
          const title = card.dataset.title;

          const seriesMatch = currentSeriesParent === 'all' ||
            (seriesParent === currentSeriesParent &&
             (currentSeriesChild === '' || seriesChild === currentSeriesChild));

          const topicMatch = currentTopic === 'all' || topic === currentTopic;
          const searchMatch = currentSearchQuery === '' ||
            title.includes(currentSearchQuery.toLowerCase()) ||
            topic.toLowerCase().includes(currentSearchQuery.toLowerCase());

          if (seriesMatch && topicMatch && searchMatch) {
            card.classList.remove('hidden');
            visibleCount++;
          } else {
            card.classList.add('hidden');
          }
        });

        if (visibleCount === 0) {
          articleList.classList.add('hidden');
          emptyState.classList.remove('hidden');
        } else {
          articleList.classList.remove('hidden');
          emptyState.classList.add('hidden');
        }

        resultCount.textContent = `${visibleCount} ‰ª∂„ÅÆË®ò‰∫ã`;

        // Update title
        let title = '„Åô„Åπ„Å¶„ÅÆË®ò‰∫ã';
        if (currentSeriesParent !== 'all') {
          title = currentSeriesChild ? `${currentSeriesParent} / ${currentSeriesChild}` : currentSeriesParent;
        }
        if (currentTopic !== 'all') {
          title = currentTopic;
        }
        if (currentSearchQuery !== '') {
          title = `"${currentSearchQuery}" „ÅÆÊ§úÁ¥¢ÁµêÊûú`;
        }
        filterTitle.textContent = title;

        sortArticles();
      }

      // Sort articles
      function sortArticles() {
        const cards = Array.from(articleList.querySelectorAll('.article-card:not(.hidden)'));

        cards.sort((a, b) => {
          const dateA = parseInt(a.dataset.date);
          const dateB = parseInt(b.dataset.date);
          return currentSort === 'newest' ? dateB - dateA : dateA - dateB;
        });

        cards.forEach(card => articleList.appendChild(card));
      }

      // Series filter with hierarchy
      document.querySelectorAll('[data-filter-type="series"]').forEach(button => {
        button.addEventListener('click', () => {
          const parent = button.dataset.filterParent;
          const child = button.dataset.filterChild;
          const hasChildren = button.dataset.hasChildren === 'true';

          // Toggle child series visibility
          if (hasChildren && child === '') {
            const childContainer = document.querySelector(`[data-parent="${parent}"]`);
            if (childContainer) {
              childContainer.classList.toggle('visible');
              button.classList.toggle('expanded');
            }
          }

          // Update filter immediately
          document.querySelectorAll('[data-filter-type="series"]').forEach(b => b.classList.remove('active'));
          button.classList.add('active');
          currentSeriesParent = parent;
          currentSeriesChild = child;
          filterArticles();
        });
      });

      // Topic filter
      document.querySelectorAll('[data-filter-type="topic"]').forEach(button => {
        button.addEventListener('click', () => {
          document.querySelectorAll('[data-filter-type="topic"]').forEach(b => b.classList.remove('active'));
          button.classList.add('active');
          currentTopic = button.dataset.filterValue;
          filterArticles();
        });
      });

      // Search
      searchInput.addEventListener('input', (e) => {
        currentSearchQuery = e.target.value;
        filterArticles();
      });

      // Sort
      sortSelect.addEventListener('change', (e) => {
        currentSort = e.target.value;
        sortArticles();
      });

      // Main filter button toggle
      document.querySelectorAll('.main-filter-button').forEach(button => {
        button.addEventListener('click', () => {
          const filterType = button.dataset.mainFilter;

          // Update button states
          document.querySelectorAll('.main-filter-button').forEach(b => b.classList.remove('active'));
          button.classList.add('active');

          // Show/hide filter lists
          document.getElementById('series-filter-list').classList.toggle('visible', filterType === 'series');
          document.getElementById('glossary-filter-list').classList.toggle('visible', filterType === 'glossary');

          // Show/hide article list and glossary list
          const articleList = document.getElementById('article-list');
          const glossaryList = document.getElementById('glossary-list');
          const articleResultHeader = document.getElementById('article-result-header');
          const sortSection = document.querySelector('.sort-section');
          const emptyState = document.getElementById('empty-state');

          if (filterType === 'series') {
            articleList.classList.remove('hidden');
            glossaryList.classList.add('hidden');
            articleResultHeader.classList.remove('hidden');
            sortSection.classList.remove('hidden');
          } else if (filterType === 'glossary') {
            articleList.classList.add('hidden');
            glossaryList.classList.remove('hidden');
            articleResultHeader.classList.add('hidden');
            sortSection.classList.add('hidden');
            emptyState.classList.add('hidden');
          }
        });
      });

      // Glossary category filter
      document.querySelectorAll('[data-filter-type="glossary-category"]').forEach(button => {
        button.addEventListener('click', () => {
          document.querySelectorAll('[data-filter-type="glossary-category"]').forEach(b => b.classList.remove('active'));
          button.classList.add('active');

          const category = button.dataset.filterValue;
          const glossaryCards = document.querySelectorAll('.glossary-card');

          // Show/hide glossary cards based on category
          glossaryCards.forEach(card => {
            if (category === 'all' || card.dataset.category === category) {
              card.classList.remove('hidden');
            } else {
              card.classList.add('hidden');
            }
          });
        });
      });

      // Glossary related articles toggle
      document.querySelectorAll('.glossary-related-toggle').forEach(button => {
        button.addEventListener('click', () => {
          const termId = button.dataset.termId;
          const articlesContainer = document.querySelector(`.glossary-related-articles[data-term-id="${termId}"]`);

          button.classList.toggle('expanded');
          articlesContainer.classList.toggle('hidden');
        });
      });
    </script>
  </body>
</html>
